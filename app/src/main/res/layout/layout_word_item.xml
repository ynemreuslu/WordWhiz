<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/md_theme_light_background"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBeginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_light_background"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        app:contentPadding="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgEnglishFlag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_uk_flag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/imgEnglishFlag"
                app:layout_constraintTop_toTopOf="@id/imgEnglishFlag"
                tools:text="Hello" />

            <ImageView
                android:id="@+id/imgTurkishFlag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tr_flag"
                app:layout_constraintStart_toStartOf="@id/imgEnglishFlag"
                app:layout_constraintTop_toBottomOf="@id/imgEnglishFlag"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvTurkish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:alpha="0.5"
                android:textStyle="italic"
                tools:text="merhaba"
                app:layout_constraintStart_toEndOf="@id/imgTurkishFlag"
                app:layout_constraintTop_toTopOf="@id/imgTurkishFlag" />

            <ImageButton
                android:id="@+id/btnClickDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/md_theme_light_background"
                android:layout_margin="8dp"
                android:src="@drawable/right"
                android:contentDescription="@string/app_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
